<div class="article_heading">
  <h1><%= @article.title %></h1>
  <div class="options">
    <%= link_to edit_article_path(@article), class: "icon" do %>
      <i class="fas fa-pencil-alt"></i>
    <% end %>
    <%= link_to article_path(@article), method: :delete, data: { confirm: "Are you sure you want to delete this article?" }, class: "icon" do %>
      <i class="far fa-trash-alt delete"></i>
    <% end %>
  </div>
</div>

<p><%= @article.content %></p>


